{
  "name": "augur-app",
  "version": "1.0.0-alpha.6",
  "description": "Augur Desktop Application",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron-forge start .src/main/main.js",
    "package": "electron-forge package",
    "publish": "electron-forge publish",
    "make": "electron-builder make --publish always",
    "make-win": "electron-builder make --win",
    "make-mac": "electron-builder make --mac",
    "make-linux": "electron-builder make --linux",
    "make-all": "electron-builder make -mwl"
  },
  "repository": "https://github.com/AugurProject/augur-app",
  "keywords": [
    "Augur",
    "Desktop",
    "Electron",
    "App",
    "Application"
  ],
  "author": "The Augur Developers <team@augur.net>",
  "license": "MIT",
  "build": {
    "linux": {
      "target": [
        "deb",
        "snap"
      ]
    },
    "artifactName": "${os}-${productName}-${version}.${ext}",
    "publish": {
      "provider": "s3",
      "bucket": "augur-app-releases",
      "path": "${version}"
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "platforms": [
            "win32"
          ],
          "config": {
            "name": "augur_app"
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "background": "./build/background.png",
            "format": "UFLO"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "platforms": [
            "linux"
          ],
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "app-data-folder": "1.0.0",
    "augur-core": "1.0.0-13",
    "augur-node": "0.2.12",
    "augur-ui": "3.36.0",
    "augur.js": "4.12.0-8",
    "knex": "0.14.6",
    "node-pre-gyp": "~0.6.38",
    "opn": "5.3.0",
    "sqlite3": "^3.1.13",
    "express": "4.16.2"
  },
  "devDependencies": {
    "electron": "2.0.0",
    "electron-builder": "^20.15.1",
    "electron-builder-squirrel-windows": "^20.15.0",
    "electron-compile": "6.4.2",
    "electron-forge": "5.2.0",
    "electron-prebuilt-compile": "2.0.0",
    "electron-publisher-s3": "^20.15.0"
  }
}
